<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="text-center">本当にアカウントを削除しますか?</h2>
        </div>
        <div class="card-body">
          <%= form_with(url: unsubscribe_path, method: :delete, local: true, html: { class: 'd-grid gap-2' }) do |form| %>
            <%= form.submit "アカウントを削除する", class: "btn btn-danger btn-lg" %>
          <% end %>
          <%= link_to "キャンセル", profile_path, class: "btn btn-secondary btn-lg mt-3" %>
        </div>
      </div>
    </div>
  </div>
</div>