<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block mx-auto" id="notice"><%= notice %></p>
<% end %>
<div class="w-4/5">
  <div class="m-auto overflow-hidden rounded-lg shadow-lg cursor-pointer mx-auto">
    <div class="block w-full h-full">
      <%= image_tag(@blog.post_image.present? ? @blog.post_image.url : "blog/TeienStage.jpg", alt: "blog photo", class: "object-cover w-full") %>
      <div class="w-full p-4 bg-white dark-bg-gray-800">
        <p class="font-medium text-indigo-500 text-md mb-1">
          <%= @blog.category %>
        </p>
        <p class="mb-2 text-xl font-medium text-gray-800 dark-text-white">
          <%= @blog.title %>
        </p>
        <p class="font-light text-gray-400 dark-text-gray-300 text-md">
          <%=safe_join(@blog.body.split("\n"),tag(:br))%>
        </p>
        <div class="flex items-center mt-4">
          <div class="flex flex-col justify-between ml-4 text-sm">
            <p class="text-gray-800 dark-text-white mb-0">
              <%= @blog.user %>
            </p>
            <p class="text-gray-400 dark-text-gray-300">
              <%= @blog.created_at %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mb-5 justify-between items-center mt-3 mx-auto w-full flex">
    <%= link_to "前へ", custom_blog_path(@blog.previous), class: "rounded-lg py-3 px-3 bg-gray-100 inline-block font-medium" if @blog.previous %>
    <%= link_to "一覧へ戻る", session[:last_visited_index] || root_path, class: "rounded-lg py-3 px-4 bg-gray-100 inline-block font-medium" %>
    <%= link_to "次へ", custom_blog_path(@blog.next), class: "rounded-lg py-3 px-3 bg-gray-100 inline-block font-medium" if @blog.next %>
  </div>
</div>
