<style>
.link {
  text-decoration: none;
  color: black ; 
}
.link:hover {
  text-decoration: none;
  color: black ; 
}
</style>

<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="mx-auto max-w-screen-xl px-4 md:px-8">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

<div class="mb-10 md:mb-16">
      <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-6 lg:text-3xl">管理用<br>投稿一覧</h2>
      <p class="mx-auto max-w-screen-md text-center text-gray-500 md:text-lg">管理用ページです．</p>
    </div>

    <div>
    <!-- アカウント詳細 -->
      <%= render 'users/show', user: current_user %>
    </div>

    <div class="flex justify-between items-center mb-5">
      <div clas="">
        <%= link_to "新規投稿", new_blog_path, class: "btn btn-primary btn-lg px-3 mt-2 mr-2 right-0" %>
      </div>
    </div>

    <div class="grid gap-4 sm:grid-cols-2 md:gap-6 lg:grid-cols-2 xl:grid-cols-2 xl:gap-8" id="blogs">
      <% @blogs.each do |blog| %>
        <div class="relative pb-3">
          <%= render 'shared/blog_card', blog: blog, truncate_length: 10 %>
          <%= link_to "投稿を編集", edit_blog_path(blog), class: "py-3 inline-block text-red-500 font-medium absolute bottom-0 right-0" %>
        </div>
      <% end %>
      <%= paginate @blogs %>
    </div>
    
    <div class="mt-5 mb-1 md:mb-16">
      <p class="mx-auto max-w-screen-md text-center text-gray-500 md:text-lg">このサイトについて<br>何かあれば下記まで連絡を<br>作成者mail : kataokatakemasa@gmail.com</p>
    </div>
  </div>

</div>