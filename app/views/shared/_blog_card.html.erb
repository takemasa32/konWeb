<div class="flex flex-col items-center overflow-hidden rounded-lg border md:flex-row md:mh-48">
    <div class="relative w-full h-48 md:h-full md:w-32 lg:w-48">
        <%= link_to custom_blog_path(blog), class: "group relative block h-48 w-full shrink-0 self-start overflow-hidden bg-gray-100 md:h-full md:w-32 lg:w-48" do %>
            <%= image_tag(blog.post_image.present? ? blog.post_image.url : "blog/TeienStage.jpg", loading: "lazy", alt: "#{blog.title}の画像", class: "absolute inset-0 h-full w-full object-cover object-center transition duration-200 group-hover:scale-110") %>
        <% end %>
    </div>
    <div class="flex flex-col gap-2 p-4 lg:p-6">
        <span class="text-sm text-indigo-400"><%= blog.category %></span>
        <span class="text-sm text-gray-400"><%= blog.created_at.strftime('%B %d, %Y') %></span>

        <h2 class="text-xl font-bold text-gray-800">
        <%= link_to blog.title, custom_blog_path(blog), class: "transition duration-100 hover:text-indigo-500 active:text-indigo-600 link" %>
        </h2>

        <p class="text-gray-500"><%= blog.body.truncate(truncate_length) %></p>

        <div class="flex justify-between">
            <div>
                <%= link_to 'Read more', custom_blog_path(blog), class: "font-semibold text-indigo-500 transition duration-100 hover:text-indigo-600 active:text-indigo-700" %>
            </div>

            <div class="flex justify-between">
                <svg class="h-5 w-5" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z" />
                </svg>
                <%= link_to "https://twitter.com/share?url=#{ request.url }&text=【島大軽音部】#{ blog.title }%0a", target: '_blank' do %>
                    <i class="fab fa-twitter" style='color: #3399FF;'>シェア</i>
                <% end %>
            </div>
        </div>
    </div>

</div>